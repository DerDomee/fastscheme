{
  "name": "fastscheme",
  "version": "0.3.0",
  "description": "A lightweight HTML/CSS/JS Framework designed to make colorscheming easier",
  "homepage": "https://dominikriedig.de/",
  "main": "dist/js/fastscheme.js",
  "scripts": {
    "css": "npm-run-all css-compile css-autoprefix css-minify",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true src/scss/ -o dist/css/",
    "css-autoprefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/css/fastscheme.min.css dist/css/fastscheme.css",
    "serve": "http-server",
    "start": "npm-run-all css serve"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.dominikriedig.de:DerDomee/fastscheme.git"
  },
  "bugs": {
    "url": "https://gitlab.dominikriedig.de/DerDomee/fastscheme/issues"
  },
  "keywords": [
    "css",
    "scss",
    "framework",
    "javascript",
    "responsive",
    "web",
    "mobile-first",
    "sass"
  ],
  "author": "Dominik Riedig",
  "license": "MIT",
  "style": "dist/css/fastscheme.css",
  "scss": "src/scss/fastscheme.scss",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "clean-css-cli": "^4.3.0",
    "http-server": "^0.12.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
